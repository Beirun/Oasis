@page "/dashboard/guest"
@inject NavigationManager NavigationManager

<div class="bg-[#e8e8e8] w-screen min-h-screen flex flex-col justify-center items-start font-montserrat">

    @* Navbar *@
    <div class="bg-[#fafafa] w-screen py-5 px-10 flex justify-between items-center font-montserrat shadow-md shadow-gray-400/50">
        <div class="h-full w-1/2 flex justify-start items-center">
            <div class="flex h-full justify-center items-center"><img src="logo.png" alt="Alternate Text" class="pb-2 h-10" /></div>
        </div>
        <div class="h-full flex justify-center items-center">
            Welcome, Guest |<button class="cursor-pointer hover:bg-red-300/40 p-1 px-3 rounded-md transition-all duration-300">
                <NavLink href="/signin"><Icon Name="Logout" size="30px" Class="focus:outline-none mt-1 " Color="black" /></NavLink>

            </button>
        </div>
    </div>

    @* Content *@
    <div class="flex w-[85%] h-50 flex justify-between my-5">
        <div class="w-4/13 h-full bg-[#f0f0f0] rounded-xl shadow-md shadow-gray-400/50 p-5">
            <div class="w-full h-1/3 flex justify-between font-bold text-2xl">My Bookings <img src="div.png" class="rounded-xl border-2 border-green-700/40" alt="Alternate Text" /></div>
            <div class="w-full h-1/3 flex text-gray-500 text-xl">
                View and manage your current reservations

            </div>
            <div class="w-full h-1/3 flex text-blue-500 font-semibold text-xl">
                <NavLink class="cursor-pointer" href="/bookings">
                    View Details ->
                </NavLink>

            </div>
        </div>
        <div class="w-4/13 h-full bg-[#f0f0f0] rounded-xl shadow-md shadow-gray-400/50 p-5">
            <div class="w-full h-1/3 flex justify-between font-bold text-2xl">New Reservations <img src="booking.png" class="rounded-xl border-2 border-blue-700/40" alt="Alternate Text" /></div>
            <div class="w-full h-1/3 flex text-gray-500 text-xl">
                Book a new room for your vacation trip

            </div>
            <div class="w-full h-1/3 flex text-blue-500 font-semibold text-xl">
                <NavLink class="cursor-pointer" href="/reservation/new">
                    Book Now ->
                </NavLink>

            </div>
        </div>
        <div class="w-4/13 h-full bg-[#f0f0f0] rounded-xl shadow-md shadow-gray-400/50 p-5">
            <div class="w-full h-1/3 flex justify-between font-bold text-2xl">Special Offers <img src="offer.png" class="size-12 p-1 rounded-xl bg-red-400/10 border-2 border-red-700/40" alt="Alternate Text" /></div>
            <div class="w-full h-1/3 flex text-gray-500 text-xl">
                Check out our latest deals and promotions

            </div>
            <div class="w-full h-1/3 flex text-blue-500 font-semibold text-xl">
                <NavLink class="cursor-pointer" href="/offers">
                    View Offers ->
                </NavLink>

            </div>
        </div>
    </div>


    @** Rooms *@
    <div class="flex w-[85%] text-3xl font-bold text-gray-800">Available Rooms</div>
    <div class="flex w-[85%] h-130 flex justify-between mb-10">
        <div class="w-4/13 h-full bg-[#f0f0f0] rounded-xl shadow-md shadow-gray-400/50 flex flex-col">
            <div class="w-full h-[67.5%] bg-[url('standard-1.jpg')] rounded-t-xl bg-center"></div>
            <div class="w-full text-2xl font-semibold  px-5">Standard</div>
            <div class="w-full text-lg font-semibold text-gray-500  px-5">
                1 Queen Bed
            </div>
            <div class="w-full flex justify-between px-5">
                <div class=" font-bold text-xl text-blue-500 ">
                    P 4,500 / Night
                </div>
                <NavLink href="/reservation/new/standard"
                         class="focus:outline-none bg-primary/90  transition-all duration-300 hover:bg-primary/70 p-2 px-4 text-center text-white rounded-md text-md font-semibold">
                    Book
                    Now</NavLink>
            </div>
        </div>
        <div class="w-4/13 h-full bg-[#f0f0f0] rounded-xl shadow-md shadow-gray-400/50 flex flex-col">
            <div class="w-full h-[67.5%] bg-[url('deluxe-1.jpg')] rounded-t-xl bg-cover bg-center"></div>
            <div class="w-full text-2xl font-semibold  px-5">Deluxe</div>
            <div class="w-full text-lg font-semibold text-gray-500  px-5">
                2 Queen Bed
            </div>
            <div class="w-full flex justify-between px-5">
                <div class=" font-bold text-xl text-blue-500 ">
                    P 5,500 / Night
                </div>
                <NavLink href="/reservation/new/deluxe"
                         class="focus:outline-none hover:bg-primary/70 transition-all duration-300 bg-primary/90 p-2 px-4 text-center text-white rounded-md text-md font-semibold">
                    Book
                    Now</NavLink>
            </div>
        </div>
        <div class="w-4/13 h-full bg-[#f0f0f0] rounded-xl shadow-md shadow-gray-400/50 flex flex-col">
            <div class="w-full h-[67.5%] bg-[url('suite-1.jpg')] rounded-t-xl bg-center"></div>
            <div class="w-full text-2xl font-semibold  px-5">Suite</div>
            <div class="w-full text-lg font-semibold text-gray-500  px-5">
                1 King Bed
            </div>
            <div class="w-full flex justify-between px-5">
                <div class=" font-bold text-xl text-blue-500 ">
                    P 7,500 / Night
                </div>
                <NavLink href="/reservation/new/suite"
                    class="focus:outline-none hover:bg-primary/70 transition-all duration-300 bg-primary/90 p-2 px-4 text-center text-white rounded-md text-md font-semibold">Book
                    Now</NavLink>
            </div>
        </div>
    </div>
    <div class="flex w-[85%] text-3xl font-bold text-gray-800">Recent Activities</div>
    <div class="flex w-[85%] min-h-50 flex justify-center items-center text-2xl font-bold mb-10">
        NO RECENT ACTIVITIES
    </div>

</div>


@page "/account-profile"

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<body class="bg-[#f2f2f2]">
    <div class="w-screen h-screen mx-auto bg-white relative overflow-hidden">
        <Navbar />

        <div class="mt-[80px] mx-auto w-[980px] bg-white rounded-xl px-10 py-10 shadow">
            <div class="flex">
                <div class="w-1/3 flex flex-col items-center">
                    <div class="text-2xl font-bold mb-6">Account Settings</div>
                    <img src="https://placehold.co/160x160"
                         class="w-[160px] h-[160px] rounded-full object-cover mb-6" />
                    <div class="w-full flex flex-col items-center">
                        <div class="bg-[#2563eb] text-white rounded-full text-sm px-4 py-2 mb-2 cursor-pointer">
                            Upload Profile Picture
                        </div>
                        <div class="text-[#e11d48] text-sm cursor-pointer">Remove</div>
                    </div>
                </div>

                <div class="w-2/3 pl-10">
                    <div class="text-lg font-semibold mb-4">Basic Info</div>
                    <div class="border border-[#e5e7eb] rounded-md mb-6">
                        <div class="flex justify-between items-center px-4 py-3 border-b border-[#e5e7eb]">
                            <div class="text-sm text-[#4b5563]">Name</div>
                            <div class="flex items-center space-x-2">
                                <div class="text-sm text-[#6b7280]">Inday Badieday</div>
                                <i class="fa-solid fa-pen text-xs text-[#6b7280] cursor-pointer"></i>
                            </div>
                        </div>
                        <div class="flex justify-between items-center px-4 py-3 border-b border-[#e5e7eb]">
                            <div class="text-sm text-[#4b5563]">Date of Birth</div>
                            <div class="flex items-center space-x-2">
                                <div class="text-sm text-[#6b7280]">November 5, 1999</div>
                                <i class="fa-solid fa-pen text-xs text-[#6b7280] cursor-pointer"></i>
                            </div>
                        </div>
                        <div class="flex justify-between items-center px-4 py-3 border-b border-[#e5e7eb]">
                            <div class="text-sm text-[#4b5563]">Gender</div>
                            <div class="flex items-center space-x-2">
                                <div class="text-sm text-[#6b7280]">Female</div>
                                <i class="fa-solid fa-pen text-xs text-[#6b7280] cursor-pointer"></i>
                            </div>
                        </div>
                        <div class="flex justify-between items-center px-4 py-3">
                            <div class="text-sm text-[#4b5563]">Email</div>
                            <div class="flex items-center space-x-2">
                                <div class="text-sm text-[#6b7280]">badie@gmail.com</div>
                                <i class="fa-solid fa-pen text-xs text-[#6b7280] cursor-pointer"></i>
                            </div>
                        </div>
                    </div>

                    <div class="text-lg font-semibold mb-4">Account Info</div>
                    <div class="border border-[#e5e7eb] rounded-md mb-6">
                        <div class="flex justify-between items-center px-4 py-3 border-b border-[#e5e7eb]">
                            <div class="text-sm text-[#4b5563]">Username</div>
                            <div class="flex items-center space-x-2">
                                <div class="text-sm text-[#6b7280]">radadihaBadie</div>
                                <i class="fa-solid fa-pen text-xs text-[#6b7280] cursor-pointer"></i>
                            </div>
                        </div>
                        <div class="flex justify-between items-center px-4 py-3">
                            <div class="text-sm text-[#4b5563]">Password</div>
                            <div class="flex items-center space-x-2">
                                <div class="text-sm text-[#6b7280]">**************</div>
                                <i class="fa-solid fa-pen text-xs text-[#6b7280] cursor-pointer"></i>
                            </div>
                        </div>
                    </div>

                    <div class="flex justify-start">
                        <div class="bg-[#2563eb] text-white text-sm font-medium px-6 py-2 rounded-md cursor-pointer">
                            Save
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="absolute bottom-0 left-0 w-full h-[120px] bg-white">
            <div class="w-full h-full relative">
                <div class="absolute left-[-400px] bottom-0 w-[1000px] h-[500px] bg-[#0047BB] rotate-[30deg] origin-bottom-left"></div>
                <div class="absolute right-[-400px] bottom-0 w-[900px] h-[400px] bg-[#0047BB] rotate-[-30deg] origin-bottom-right"></div>
            </div>
        </div>
    </div>
</body>

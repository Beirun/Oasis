@page "/profile/housekeeper"
@using Oasis.State
@rendermode InteractiveServer
@inject AppState AppState
    <div class="relative mx-auto h-screen w-screen overflow-hidden bg-white">
        <Navbar />

        <div class="mx-auto mt-[80px] w-[980px] rounded-xl bg-white px-10 py-10 shadow">
            <div class="flex">
                <div class="flex w-1/3 flex-col items-center">
                    <div class="mb-6 text-2xl font-bold">Account Settings</div>
                    <img src="https://placehold.co/160x160"
                         class="mb-6 h-[160px] w-[160px] rounded-full object-cover" />
                    <div class="flex w-full flex-col items-center">
                        <div class="mb-2 cursor-pointer rounded-full bg-[#2563eb] px-4 py-2 text-sm text-white">
                            Upload Profile Picture
                        </div>
                        <div class="cursor-pointer text-sm text-[#e11d48]">Remove</div>
                    </div>
                </div>

                <div class="w-2/3 pl-10">
                    <div class="mb-4 text-lg font-semibold">Basic Info</div>
                    <div class="mb-6 rounded-md border border-[#e5e7eb]">
                        <div class="flex items-center justify-between border-b border-[#e5e7eb] px-4 py-3">
                            <div class="text-sm text-[#4b5563]">Name</div>
                            <div class="flex items-center space-x-2">
                                <div class="text-sm text-[#6b7280]">Inday Badieday</div>
                                <i class="fa-solid fa-pen cursor-pointer text-xs text-[#6b7280]"></i>
                            </div>
                        </div>
                        <div class="flex items-center justify-between border-b border-[#e5e7eb] px-4 py-3">
                            <div class="text-sm text-[#4b5563]">Date of Birth</div>
                            <div class="flex items-center space-x-2">
                                <div class="text-sm text-[#6b7280]">November 5, 1999</div>
                                <i class="fa-solid fa-pen cursor-pointer text-xs text-[#6b7280]"></i>
                            </div>
                        </div>
                        <div class="flex items-center justify-between border-b border-[#e5e7eb] px-4 py-3">
                            <div class="text-sm text-[#4b5563]">Gender</div>
                            <div class="flex items-center space-x-2">
                                <div class="text-sm text-[#6b7280]">Female</div>
                                <i class="fa-solid fa-pen cursor-pointer text-xs text-[#6b7280]"></i>
                            </div>
                        </div>
                        <div class="flex items-center justify-between px-4 py-3">
                            <div class="text-sm text-[#4b5563]">Email</div>
                            <div class="flex items-center space-x-2">
                                <div class="text-sm text-[#6b7280]">badie@gmail.com</div>
                                <i class="fa-solid fa-pen cursor-pointer text-xs text-[#6b7280]"></i>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4 text-lg font-semibold">Account Info</div>
                    <div class="mb-6 rounded-md border border-[#e5e7eb]">
                        <div class="flex items-center justify-between border-b border-[#e5e7eb] px-4 py-3">
                            <div class="text-sm text-[#4b5563]">Username</div>
                            <div class="flex items-center space-x-2">
                                <div class="text-sm text-[#6b7280]">radadihaBadie</div>
                                <i class="fa-solid fa-pen cursor-pointer text-xs text-[#6b7280]"></i>
                            </div>
                        </div>
                        <div class="flex items-center justify-between px-4 py-3">
                            <div class="text-sm text-[#4b5563]">Password</div>
                            <div class="flex items-center space-x-2">
                                <div class="text-sm text-[#6b7280]">**************</div>
                                <i class="fa-solid fa-pen cursor-pointer text-xs text-[#6b7280]"></i>
                            </div>
                        </div>
                    </div>

                    <div class="flex justify-start">
                        <div class="cursor-pointer rounded-md bg-[#2563eb] px-6 py-2 text-sm font-medium text-white">
                            Save
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="absolute bottom-0 left-0 h-[120px] w-full bg-white">
            <div class="relative h-full w-full">
                <div class="absolute bottom-0 left-[-400px] h-[500px] w-[1000px] origin-bottom-left rotate-[30deg] bg-[#0047BB]"></div>
                <div class="absolute right-[-400px] bottom-0 h-[400px] w-[900px] origin-bottom-right rotate-[-30deg] bg-[#0047BB]"></div>
            </div>
        </div>
    </div>

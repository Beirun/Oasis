@page "/housekeeper/deluxerooms"

<div class="bg-background font-montserrat flex h-screen w-screen flex-col">
    <Navbar />
    <div class="h-full w-3/5">
        <div class="flex h-15 w-full">
            <Icon Name="arrow_back" Size="35px" />
            <p class="p-6 text-2xl font-bold">Deluxe</p>
        </div>
        <div class="mt-3 flex flex-row">
            <div class="border-0 box-content h-120 w-5/5 rounded-lg bg-white">
                <table class="min-w-full table-auto">
                    <thead>
                        <tr class="bg-gray-100 text-left text-sm text-gray-600 uppercase">
                            <th class="px-6 py-4">Room No.</th>
                            <th class="px-6 py-4">Check In</th>
                            <th class="px-6 py-4">Check Out</th>
                            <th class="px-6 py-4">Status</th>
                            <th class="px-6 py-4">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-b">
                            <td class="px-6 py-4 font-medium text-gray-900">203</td>
                            <td class="px-6 py-4 text-gray-700">Jan 15, 2025</td>
                            <td class="px-6 py-4 text-gray-700">Jan 18, 2025</td>
                            <td class="px-6 py-4">
                                <span class="rounded-full bg-red-100 px-3 py-1 text-xs font-semibold text-red-600">Uncleaned</span>
                            </td>
                            <td class="px-6 py-4">
                                <button class="rounded-full bg-blue-500 px-4 py-1 text-sm text-white hover:bg-blue-600">Start</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
